@page
@model BulkMailSender.Pages.PreviewModel
@{
    ViewData["Title"] = "Review Before Sending";
}

<style>
    .scroll-box { max-height: 550px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: .5rem; padding: 1rem; background: #fff; }
    .template-preview { white-space: pre-wrap; border: 1px solid #dee2e6; border-radius: .5rem; padding: .75rem; background: #f8f9fa; }
</style>

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2 class="mb-4"><i class="bi bi-clipboard-check"></i> Review Before Sending</h2>

        @if (!Model.HasUploadData)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Missing required data. Please complete <a asp-page="/Upload">Upload</a>, <a asp-page="/Recipients">Recipients</a>, and <a asp-page="/Template">Template</a> first.
            </div>
        }

        @if (TempData["SendError"] != null)
        {
            <div class="alert alert-danger">@TempData["SendError"]</div>
        }

        <div class="row g-3">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white"><h6 class="mb-0">Template</h6></div>
                    <div class="card-body">
                        <p><strong>Type:</strong> @Model.Template?.TemplateType</p>
                        <p><strong>Subject:</strong><br /><div class="template-preview">@Model.Template?.Subject</div></p>
                        <p><strong>Body:</strong><br /><div class="template-preview">@Model.Template?.Body</div></p>
                        <div class="text-end">
                            <a asp-page="/Template" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil"></i> Edit Template</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Recipients (Grouped by Debtor)</h6>
                        <small class="text-muted">@Model.GroupedRecipients.Count groups</small>
                    </div>
                    <div class="card-body p-0">
                        <div class="scroll-box">
                            <div class="accordion" id="previewAccordion">
                                @for (int i = 0; i < Model.GroupedRecipients.Count; i++)
                                {
                                    var g = Model.GroupedRecipients[i];
                                    var first = g.First();
                                    var accId = $"previewGroup{i}";
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingPrev@(i)">
                                            <button class="accordion-button @(i==0?"":"collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@accId" aria-expanded="@(i==0?"true":"false")" aria-controls="@accId">
                                                <strong>@g.Key</strong>
                                                <span class="ms-3 badge bg-primary">@g.Count() email(s)</span>
                                                @if (!string.IsNullOrWhiteSpace(first.OrganizationName))
                                                {
                                                    <span class="ms-2 text-muted">@first.OrganizationName</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(first.Notes))
                                                {
                                                    <span class="ms-2 badge bg-info">@first.Notes</span>
                                                }
                                            </button>
                                        </h2>
                                        <div id="@accId" class="accordion-collapse collapse @(i==0?"show":"")" aria-labelledby="headingPrev@(i)" data-bs-parent="#previewAccordion">
                                            <div class="accordion-body">
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <table class="table table-sm align-middle">
                                                            <thead>
                                                                <tr>
                                                                    <th style="width:45%">Email</th>
                                                                    <th style="width:20%">Label</th>
                                                                    <th style="width:35%">Notes</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var r in g)
                                                                {
                                                                    <tr>
                                                                        <td>@r.Email</td>
                                                                        <td>
                                                                            @if (r.Label == BulkMailSender.Models.EmailLabel.To) { <span class="badge bg-success">TO</span> }
                                                                            else if (r.Label == BulkMailSender.Models.EmailLabel.Cc) { <span class="badge bg-warning text-dark">CC</span> }
                                                                            else { <span class="badge bg-secondary">BCC</span> }
                                                                        </td>
                                                                        <td>@r.Notes</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <div class="card">
                                                            <div class="card-header"><small class="text-muted">Attachments Summary</small></div>
                                                            <div class="card-body">
                                                                @if (Model.AttachmentsSummary.TryGetValue(g.Key, out var sum))
                                                                {
                                                                    <ul class="mb-0">
                                                                        <li>INV: @sum.InvCount</li>
                                                                        <li>SOA: @sum.SoaCount</li>
                                                                        <li>OD: @sum.OdCount</li>
                                                                        <li>OTHER: @sum.OtherCount</li>
                                                                    </ul>
                                                                }
                                                                else
                                                                {
                                                                    <div class="text-muted">No attachments found for this debtor.</div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-page="/Recipients" class="btn btn-outline-secondary"><i class="bi bi-people"></i> Edit Recipients</a>
                        <div class="d-flex gap-2">
                            <form method="post">
                                <button type="submit" asp-page-handler="Send" class="btn btn-danger">
                                    <i class="bi bi-send"></i> Send Now (MVP)
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
