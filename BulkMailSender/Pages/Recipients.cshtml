@page
@model BulkMailSender.Pages.RecipientsModel
@{
    ViewData["Title"] = "Upload Recipients";
}

<style>
    .recipients-scroll-box { max-height: 500px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: .5rem; padding: 1rem; background: #ffffff; }
    .recipients-scroll-box::-webkit-scrollbar { width: 10px; }
    .recipients-scroll-box::-webkit-scrollbar-track { background: #f8f9fa; }
    .recipients-scroll-box::-webkit-scrollbar-thumb { background: #c1c7ce; border-radius: 5px; }
    .recipients-scroll-box::-webkit-scrollbar-thumb:hover { background: #a0a6ac; }
</style>

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2 class="mb-4">
            <i class="bi bi-people"></i> Upload Recipients List
        </h2>

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="recipientsFile" class="form-label fw-bold">Select Recipients CSV</label>
                <input type="file" class="form-control" id="recipientsFile" name="recipientsFile" accept=".csv" required />
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="text-danger mt-2">@Model.ErrorMessage</div>
                }
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-upload"></i> Upload and Parse</button>
            </div>
        </form>

        @if (Model.ParseSummary != null)
        {
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Parsing Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h3 class="text-primary">@Model.ParseSummary.TotalDebtorCodes</h3>
                            <p class="text-muted">Total Debtor Codes</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-success">@(Model.ParseSummary.TotalDebtorCodes - Model.ParseSummary.InvalidRecipients)</h3>
                            <p class="text-muted">Valid Recipient</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-danger">@Model.ParseSummary.InvalidRecipients</h3>
                            <p class="text-muted">Invalid Recipient</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-info">@Model.Recipients.Count</h3>
                            <p class="text-muted">Total Emails</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.Recipients.Any())
        {
            var grouped = Model.Recipients
                .GroupBy(r => r.DebtorCode)
                .OrderBy(g => g.Key)
                .ToList();

            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recipients (Grouped by Debtor Code)</h5>
                    <small class="text-muted">@grouped.Count groups</small>
                </div>
                <div class="card-body p-0">
                    <div class="recipients-scroll-box">
                        <div class="accordion" id="recipientsAccordion">
                            @for (int i = 0; i < grouped.Count; i++)
                            {
                                var g = grouped[i];
                                var first = g.First();
                                var accId = $"debtorGroup{i}";
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingRec@(i)">
                                        <button class="accordion-button @(i==0?"":"collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@accId" aria-expanded="@(i==0?"true":"false")" aria-controls="@accId">
                                            <strong>@g.Key</strong>
                                            <span class="ms-3 badge bg-primary">@g.Count() email(s)</span>
                                            @if (!string.IsNullOrWhiteSpace(first.OrganizationName))
                                            {
                                                <span class="ms-2 text-muted">@first.OrganizationName</span>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(first.Notes))
                                            {
                                                <span class="ms-2 badge bg-info">@first.Notes</span>
                                            }
                                        </button>
                                    </h2>
                                    <div id="@accId" class="accordion-collapse collapse @(i==0?"show":"")" aria-labelledby="headingRec@(i)" data-bs-parent="#recipientsAccordion">
                                        <div class="accordion-body">
                                            <table class="table table-sm align-middle">
                                                <thead>
                                                    <tr>
                                                        <th style="width:40%">Email</th>
                                                        <th style="width:15%">Label</th>
                                                        <th style="width:25%">Organization</th>
                                                        <th style="width:20%">Notes</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var r in g)
                                                    {
                                                        <tr>
                                                            <td><i class="bi bi-envelope"></i> @r.Email</td>
                                                            <td>
                                                                @if (r.Label == BulkMailSender.Models.EmailLabel.To) { <span class="badge bg-success">TO</span> }
                                                                else if (r.Label == BulkMailSender.Models.EmailLabel.Cc) { <span class="badge bg-warning text-dark">CC</span> }
                                                                else { <span class="badge bg-secondary">BCC</span> }
                                                            </td>
                                                            <td>@r.OrganizationName</td>
                                                            <td>@r.Notes</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-page="/Upload" class="btn btn-success"><i class="bi bi-arrow-right-circle"></i> Next: Upload Attachments</a>
                </div>
            </div>
        }

        @if ((Model.InvalidDebtorCodes.Any() || Model.Errors.Any()) && Model.ParseSummary != null)
        {
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-octagon"></i> Issues Found During Parsing (@(Model.InvalidDebtorCodes.Count + Model.Errors.Count) total)</h5>
                </div>
                <div class="card-body">
                    @{
                        // Group parse errors by debtor code
                        var errorsByDebtorCode = Model.ParseErrors
                            .GroupBy(e => e.DebtorCode ?? "[No Debtor Code]")
                            .OrderBy(g => g.Key)
                            .ToList();
                    }

                    @if (errorsByDebtorCode.Any())
                    {
                        <div class="mb-0">
                            <h6 class="text-danger mb-3">
                                <i class="bi bi-exclamation-triangle"></i> Data Issues by Debtor Code (@Model.ParseErrors.Count)
                            </h6>
                            <div class="accordion" id="errorAccordion">
                                @{
                                    int errorAccordionIndex = 0;
                                }
                                @foreach (var debtorGroup in errorsByDebtorCode)
                                {
                                    var accId = $"errorGroup{errorAccordionIndex}";
                                    var debtorCodeDisplay = debtorGroup.Key;
                                    var debtorCodeErrors = debtorGroup.ToList();

                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="errorHeading@(errorAccordionIndex)">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@accId" aria-expanded="false" aria-controls="@accId">
                                                <strong>Debtor Code: <code>@debtorCodeDisplay</code></strong>
                                                <span class="ms-2 badge bg-danger">@debtorCodeErrors.Count issue(s)</span>
                                                @{
                                                    var errorTypeSummary = string.Join(", ", debtorCodeErrors
                                                        .GroupBy(e => e.ErrorType)
                                                        .Select(g => $"{g.Key}(@g.Count())"));
                                                }
                                                <span class="ms-2 small text-muted">(@Html.Raw(errorTypeSummary))</span>
                                            </button>
                                        </h2>
                                        <div id="@accId" class="accordion-collapse collapse" aria-labelledby="errorHeading@(errorAccordionIndex)" data-bs-parent="#errorAccordion">
                                            <div class="accordion-body p-0">
                                                <div class="list-group list-group-flush">
                                                    @foreach (var error in debtorCodeErrors)
                                                    {
                                                        var errorColor = error.ErrorType switch
                                                        {
                                                            "DebtorCode" => "danger",
                                                            "Email" => "warning",
                                                            "Label" => "warning",
                                                            "Format" => "warning",
                                                            "Missing" => "danger",
                                                            _ => "secondary"
                                                        };

                                                        <div class="list-group-item border-start border-@errorColor border-5">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div style="flex: 1;">
                                                                    <div class="mb-2">
                                                                        <span class="badge bg-@errorColor">@error.ErrorType</span>
                                                                        <small class="text-muted ms-2">Row @error.RowNumber</small>
                                                                    </div>
                                                                    <p class="mb-0 small">@error.ErrorMessage</p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    errorAccordionIndex++;
                                }
                            </div>
                        </div>
                    }
                    else if (Model.InvalidDebtorCodes.Any())
                    {
                        <div class="mb-4">
                            <h6 class="text-danger mb-3">
                                <i class="bi bi-x-circle"></i> Invalid Debtor Code Styles (@Model.InvalidDebtorCodes.Count)
                            </h6>
                            <div class="list-group">
                                @foreach (var code in Model.InvalidDebtorCodes.Take(50))
                                {
                                    <div class="list-group-item border-start border-danger border-5">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">Debtor Code: <code class="bg-light p-1">@code</code></h6>
                                                <p class="mb-0 text-muted small">
                                                    <strong>Issue:</strong> Invalid format. Debtor codes must contain exactly one hyphen with uppercase alphanumeric groups on both sides (e.g., <code>3000-AT502</code>).
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (Model.InvalidDebtorCodes.Count > 50)
                            {
                                <div class="alert alert-warning mt-2 mb-0">
                                    <small>... and @(Model.InvalidDebtorCodes.Count - 50) more invalid debtor codes</small>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Accepted Formats moved to bottom -->
        <div class="card shadow-sm mt-5">
            <div class="card-body">
                <h5 class="card-title">Accepted Formats</h5>
                <ul>
                    <li>CSV (Google Contacts export supported)</li>
                    <li>Columns include:
                        <ul>
                            <li><strong>First Name</strong> (Debtor Code)</li>
                            <li><strong>Organization Name</strong></li>
                            <li><strong>Notes</strong></li>
                            <li><strong>E-mail n - Value</strong> + <strong>E-mail n - Type/Label</strong> (n = 1..N)</li>
                        </ul>
                    </li>
                </ul>
                <div class="alert alert-info">
                    <strong>Email Label values:</strong> Work ? TO, View ? CC, Private ? BCC (others normalized).
                </div>
                <div class="alert alert-light border mt-2">
                    <i class="bi bi-arrow-right"></i> New flow: Upload recipients first, then upload attachments.
                </div>
            </div>
        </div>
    </div>
</div>
