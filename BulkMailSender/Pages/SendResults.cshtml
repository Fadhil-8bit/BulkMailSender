@page
@model BulkMailSender.Pages.SendResultsModel
@{
    ViewData["Title"] = "Send Results";
}

<style>
    .result-row-success { background-color: #d1e7dd; }
    .result-row-failed { background-color: #f8d7da; }
    .result-row-skipped { background-color: #fff3cd; }
    .result-table { font-size: 0.9rem; }
    .badge-retry { font-size: 0.75rem; }
</style>

<div class="row">
    <div class="col-md-11 offset-md-0">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-check2-circle"></i> Send Results</h2>
            <a asp-page="/Preview" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Review
            </a>
        </div>

        @if (Model.Results == null)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No send results found. Please complete the send process first.
            </div>
            <div class="text-center mt-4">
                <a asp-page="/Upload" class="btn btn-primary">Start New Upload</a>
            </div>
        }
        else
        {
            <!-- Summary Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card border-success">
                        <div class="card-body text-center">
                            <h3 class="text-success mb-0">@Model.Results.Sent.Count</h3>
                            <p class="text-muted mb-0"><i class="bi bi-check-circle"></i> Sent Successfully</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-danger">
                        <div class="card-body text-center">
                            <h3 class="text-danger mb-0">@Model.Results.Failed.Count</h3>
                            <p class="text-muted mb-0"><i class="bi bi-x-circle"></i> Failed</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-warning">
                        <div class="card-body text-center">
                            <h3 class="text-warning mb-0">@Model.Results.Skipped.Count</h3>
                            <p class="text-muted mb-0"><i class="bi bi-skip-forward-circle"></i> Skipped</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-info">
                        <div class="card-body text-center">
                            <h3 class="text-info mb-0">@(Model.Results.Sent.Count + Model.Results.Failed.Count + Model.Results.Skipped.Count)</h3>
                            <p class="text-muted mb-0"><i class="bi bi-envelope"></i> Total Processed</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            @if (Model.Results.Failed.Any())
            {
                <div class="alert alert-warning d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>@Model.Results.Failed.Count failed email(s)</strong> - Review the errors below and retry if needed.
                    </div>
                    <div>
                        <form method="post" asp-page-handler="DownloadFailed" style="display:inline;" class="me-2">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-download"></i> Download Failed CSV
                            </button>
                        </form>
                        <form method="post" asp-page-handler="RetryFailed" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-arrow-clockwise"></i> Retry Failed Emails
                            </button>
                        </form>
                    </div>
                </div>
            }

            <!-- Detailed Results Table -->
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> Detailed Results</h5>
                    <small>@(Model.Results.Sent.Count + Model.Results.Failed.Count + Model.Results.Skipped.Count) total</small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover result-table mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th style="width: 15%;">Debtor Code</th>
                                    <th style="width: 10%;">Status</th>
                                    <th style="width: 30%;">Recipients (TO)</th>
                                    <th style="width: 25%;">Message / Error</th>
                                    <th style="width: 10%;">Timestamp</th>
                                    <th style="width: 5%;">Retries</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rowNum = 1;
                                    var allResults = Model.Results.Sent
                                        .Select(r => new { Result = r, Type = "Sent" })
                                        .Concat(Model.Results.Failed.Select(r => new { Result = r, Type = "Failed" }))
                                        .Concat(Model.Results.Skipped.Select(r => new { Result = r, Type = "Skipped" }))
                                        .OrderBy(r => r.Result.Timestamp)
                                        .ToList();
                                }

                                @foreach (var item in allResults)
                                {
                                    var rowClass = item.Type == "Sent" ? "result-row-success" 
                                                  : item.Type == "Failed" ? "result-row-failed" 
                                                  : "result-row-skipped";
                                    <tr class="@rowClass">
                                        <td>@rowNum</td>
                                        <td><strong>@item.Result.DebtorCode</strong></td>
                                        <td>
                                            @if (item.Type == "Sent")
                                            {
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sent</span>
                                            }
                                            else if (item.Type == "Failed")
                                            {
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Failed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark"><i class="bi bi-skip-forward"></i> Skipped</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Result.To.Any())
                                            {
                                                <small>
                                                    @foreach (var email in item.Result.To.Take(2))
                                                    {
                                                        <div><i class="bi bi-envelope"></i> @email</div>
                                                    }
                                                    @if (item.Result.To.Count > 2)
                                                    {
                                                        <div class="text-muted">+ @(item.Result.To.Count - 2) more</div>
                                                    }
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Result.Message))
                                            {
                                                <small>@item.Result.Message</small>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Result.Reason))
                                            {
                                                <small class="text-danger">@item.Result.Reason</small>
                                            }
                                        </td>
                                        <td><small class="text-muted">@item.Result.Timestamp.ToLocalTime().ToString("HH:mm:ss")</small></td>
                                        <td>
                                            @if (item.Result.RetryCount > 0)
                                            {
                                                <span class="badge badge-retry bg-secondary">@item.Result.RetryCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                    rowNum++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Footer -->
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="mb-3"><i class="bi bi-info-circle"></i> What's Next?</h6>
                            <ul class="mb-0">
                                <li>Review the detailed results above</li>
                                @if (Model.Results.Failed.Any())
                                {
                                    <li>Download failed emails CSV for manual review</li>
                                    <li>Fix any issues and retry failed emails</li>
                                }
                                else
                                {
                                    <li class="text-success">All emails sent successfully! ?</li>
                                }
                                <li>Start a new upload session when ready</li>
                            </ul>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-page="/Upload" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Start New Upload
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
